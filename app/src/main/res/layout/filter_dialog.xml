<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="200dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_Edit_space"
        android:background="@null"></LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_Edit_height"
        android:hint="Country"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/editFild"
        android:id="@+id/country"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_Edit_space"
        android:background="@null"></LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_Edit_height"
        android:hint="Capital"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/editFild"
        android:id="@+id/capoital"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_Edit_space"
        android:background="@null"></LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_Edit_height"
        android:hint="Code"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:inputType="numberDecimal|numberSigned"
        android:background="@color/editFild"
        android:id="@+id/code"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_Edit_space"
        android:background="@null"></LinearLayout>

    <Button
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:background="@color/contactList"
        android:text="filter"
       />






</LinearLayout>