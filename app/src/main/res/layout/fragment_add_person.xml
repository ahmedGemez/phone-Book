<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@color/background"
    tools:context=".Views.AddContactFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/photographer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/profile_image"
        tools:layout_editor_absoluteX="-16dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_Edit_height"
            android:background="@color/editFild"
            android:hint="First Name"
            android:id="@+id/firstname"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_Edit_space"
            android:background="@null"></LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_Edit_height"
            android:hint="Last Name"
            android:background="@color/editFild"
            android:id="@+id/Lastname"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_Edit_space"
            android:background="@null"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_Edit_height"
            android:orientation="horizontal"
            android:weightSum="8">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="code"
                android:gravity="center"
                android:text="002"
                android:background="@color/editFild"
                android:id="@+id/code"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/item_Edit_height"
                android:layout_weight="1"
                android:hint="code"
                android:src="@drawable/arrow"
                android:layout_marginRight="5dp"
                android:background="@color/editFild"
                android:id="@+id/codeButton"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="@dimen/item_Edit_height"
                android:hint="phone"
                android:inputType="phone"
                android:background="@color/editFild"
                android:id="@+id/phone"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_Edit_space"
            android:background="@null"></LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_Edit_height"
            android:hint="Email"
            android:background="@color/editFild"
            android:id="@+id/email"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_Edit_space"
            android:background="@null"></LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_Edit_height"
            android:hint="latitude"
            android:inputType="numberDecimal|numberSigned"
            android:background="@color/editFild"
            android:id="@+id/latitude"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_Edit_space"
            android:background="@null"></LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_Edit_height"
            android:hint="latitude"
            android:inputType="numberDecimal|numberSigned"
            android:background="@color/editFild"
            android:id="@+id/longitude"/>


    </LinearLayout>


    <Button
        android:id="@+id/add"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:background="@color/contactList"
        android:text="Add Person"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>